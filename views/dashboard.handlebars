<aside>
  <h2>Enjoy the horoscopes!</h2>
</aside>
<section>
  <h4 id="user-sign">Sign: {{prediction.userSign}}</h4>
  <h4 id="user-animal-sign">Animal Sign:{{prediction.userAnimalSign}}</h4>
  <h3>Your Prediction:</h3>
  <h3 id="today-prediction">Today: {{prediction.today}}</h3>
  <h3 id="tomorrow-prediction">Tomoorw: {{prediction.tomorrow}}</h3>

  <form class="new-post-form">
    <div>
      <label for="post-title">Title</label>
      <input type="text" id="post-title" name="post-title" />
    </div>
    <div>
      <label for="post-url">Link</label>
      <input id="post-url" name="post-url" />
    </div>
    <button type="submit" class="btn">Create</button>
  </form>
</section>

