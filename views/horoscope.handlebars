<section class="container">
  <h3 class="horoscope-name">{{horoscope.name}}</h3>
  <h4>Opening Hour: {{format_time horoscope.starting_date}}</h4>
  <h4>Closing Hour: {{format_time horoscope.ending_date}}</h4>
  <!-- If the user is logged in, render the horoscope content -->
  {{#if loggedIn}}
  <section class="flex-row justify-center">
    {{#each horoscope.paintings as |painting|}}
    {{> painting-details}}
    {{/each}}
  </section>
</section>
<!-- Otherwise, provide a link to login -->
{{else}}
<a href="/login">You must login first to view the horoscopes</a>
{{/if}}
