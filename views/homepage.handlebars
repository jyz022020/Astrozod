<section>
    <h1>Welcome to AstroZod where you can learn more about your Horoscope!</h1>
</section>
<section>
    <h2>Recent Post:</h2>
    <ol>
        {{#each shareList as |share|}}
            <li>
                {{share.content}}
                <ol>
                    {{#each share.comments as |comment|}}
                        <li>
                            author: {{comment.author}}
                            comment: {{comment.content}}
                        </li>
                    {{/each}}
                </ol>
                <input type="text" id = "comment-{{share.id}}">
                <button class="add-comment" data-id = "{{share.id}}">Add Comment</button>
            </li>
        {{/each}}
    </ol>
</section>>
